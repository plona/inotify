set -o nounset                              # Treat unset variables as an error

sdir=$HOME/work
ddir="/home/plona.nobackup/snapshots 1"

cd "$sdir"
rsync \
    --verbose \
    --progress \
    --archive \
    --update \
    --delete \
    --force \
. "$ddir"
